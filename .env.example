# App Settings
APP_NAME="ScholarIQ"
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/scholariq
DATABASE_TEST_URL=postgresql://user:password@localhost:5432/scholariq_test

# CORS
